---
import Navbar from "@/components/navbar.astro";
import "@/styles/global.css";

interface Props {
	class?: string;
	title?: string;
}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>
			{Astro.props.title ? `${Astro.props.title} - Giolt` : "Giolt - Hosting except the headaches"}
		</title>
	</head>
	<body class="flex flex-col min-h-svh">
		<Navbar
			buttons={[
				{
					label: "Docs",
					href: "https://docs.giolt.com"
				}
			]}
		/>
		<main class:list={["flex-1", Astro.props.class]}>
			<slot/>
		</main>
	</body>
</html>
