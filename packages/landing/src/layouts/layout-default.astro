---
import "@/styles/style.css";
import "@fontsource-variable/bricolage-grotesque";
import Footer from "giolt-shared/components/footer.astro";
import Navbar from "giolt-shared/components/navbar.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Giolt</title>
	</head>
	<body class="flex flex-col min-h-svh">
		<Navbar
			buttons={[{
				text: "Docs",
				href: "https://docs.giolt.com",
				external: true
			}]}
		/>
		<main>
			<slot/>
		</main>
		<Footer/>
	</body>
</html>
