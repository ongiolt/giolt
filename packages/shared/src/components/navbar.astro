---
import darkLogo from "../assets/giolt-dark.svg";
import lightLogo from "../assets/giolt-light.svg";

interface Props {
	logo?: boolean;
	logoHref?: string;
	buttons?: {
		text: string;
		href: string;
		external?: boolean;
	}[];
}

const { logo = true, logoHref = "/", buttons = [] } = Astro.props;
---

<div class="navbar"></div>

<nav
	class="navbar fixed glass bg-base-100/50 shadow-sm z-50"
>
	<div class="flex-1 flex flex-row items-center gap-1">
		{logo ?
			<>
				<a
					href={logoHref}
					aria-label="Logo"
					class="btn btn-ghost btn-circle"
				>
					<picture class="block">
						<source media="(prefers-color-scheme: dark)" srcset={darkLogo.src}>
						<source media="(prefers-color-scheme: light)" srcset={lightLogo.src}>
						<img src={lightLogo.src} alt="Giolt Logo">
					</picture>
				</a>
				<span class="badge badge-sm">Alpha</span>
			</>
		: null}
	</div>
	<div class="flex-none flex flex-row items-center gap-1">
		{buttons.map((b) => (
			<a
				href={b.href}
				target={b.external ? "_blank" : "_self"}
				class="btn btn-ghost"
			>
				{b.text}
			</a>
		))}
	</div>
</nav>
