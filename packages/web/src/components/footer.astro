---
import { Card, CardContent, CardDescription, CardTitle } from "./ui/card";

const currentYear = new Date().getFullYear();
---

<footer class="container">
	<h1 class="mb-[-15%] text-center font-black text-[40vw] leading-none bg-clip-text bg-gradient-to-t to-foreground/25 text-transparent">
		Giolt
	</h1>
	<Card>
		<CardContent>
			<CardTitle>
				&copy; {currentYear} &middot; Giolt contributors &middot; All rights reserved
			</CardTitle>
			<CardDescription>
				Hosting without the headaches
			</CardDescription>
			<div class="flex flex-row flex-wrap gap-8">
				<div>
					<h3 class="mt-3 text-xl font-bold">
						Contribute
					</h3>
					<div
						class="text-muted-foreground *:hover:underline *:block"
					>
						<a
							href="https://github.com/ongiolt/giolt"
							target="_blank"
						>
							GitHub
						</a>
						<a
							href="https://github.com/ongiolt/giolt/blob/main/LICENSE.md"
							target="_blank"
						>
							License
						</a>
					</div>
				</div>
			</div>
		</CardContent>
	</Card>
</footer>
