---
import "@/styles/global.css";
import "@fontsource-variable/bricolage-grotesque";
import HeadTags from "@/components/head-tags.astro";
import Navbar from "@/components/navbar.astro";

interface Props {
	class?: string;
	title?: string;
	buttons?: {
		label: string;
		href: string;
	}[];
}
---

<html lang="en">
	<head>
		<HeadTags
			title={Astro.props.title}
		/>
	</head>
	<body class="flex flex-col min-h-svh">
		<Navbar
			buttons={Astro.props.buttons}
			userButton
		/>
		<main class:list={["flex-1", Astro.props.class]}>
			<slot/>
		</main>
	</body>
</html>
