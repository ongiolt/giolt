{
	"name": "giolt",
	"version": "1.0.0",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/bun": "latest",
		"typescript": "^5.8.3",
		"wrangler": "^4.14.4"
	},
	"private": true,
	"scripts": {
		"landing:dev": "bun run --filter giolt-landing dev",
		"landing:build": "bun run --filter giolt-landing build",
		"tenant:dev": "bun run --filter giolt-tenant dev",
		"tenant:build": "bun run --filter giolt-tenant build",
		"db:visualizer": "bun run --filter giolt-db visualizer",
		"db:studio": "bun run --filter giolt-db studio",
		"db:seed": "bun run --filter giolt-db seed",
		"check": "biome check .",
		"check:ci": "biome ci .",
		"check:fix": "biome check --write ."
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"@tailwindcss/oxide",
		"esbuild",
		"sharp",
		"workerd"
	],
	"workspaces": ["packages/*"]
}
